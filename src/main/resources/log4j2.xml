<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="archive.maxHistory">28</Property>
        <Property name="archive.maxFileSize">400MB</Property>
    </Properties>

    <Appenders>
        <RollingFile name="MongoAppender" fileName="logs/mongo.log"
                     filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %c{1} [%p] %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="${archive.maxFileSize}"/>
            </Policies>
            <DefaultRolloverStrategy max="${archive.maxHistory}"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="ERROR">
            <AppenderRef ref="MongoAppender"/>
        </Root>

        <Logger name="reactivemongo" level="ERROR" additivity="false">
            <AppenderRef ref="MongoAppender"/>
        </Logger>

        <Logger name="reactivemongo.api.Failover" level="DEBUG" additivity="false">
            <AppenderRef ref="MongoAppender"/>
        </Logger>

    </Loggers>
</Configuration>


